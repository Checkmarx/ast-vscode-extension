{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out",
    "rootDir": "./src",
    "baseUrl": ".",
    "tsBuildInfoFile": "./out/.tsbuildinfo",
    "paths": {
      "@checkmarx/vscode-core": ["../core/out/index"],
      "@checkmarx/vscode-core/*": ["../core/out/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "out"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}

