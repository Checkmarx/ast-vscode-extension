{
  "name": "ast-results",
  "publisher": "checkmarx",
  "displayName": "Checkmarx AST Results",
  "description": "For managing AST scan results",
  "version": "3.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/CheckmarxDev/ast-vscode-extension.git"
  },
  "homepage": "https://github.com/CheckmarxDev/ast-vscode-extension#readme",
  "bugs": {
    "url": "https://github.com/CheckmarxDev/ast-vscode-extension/issues"
  },
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.56.2"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:astResults"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ast-results.newDetails",
        "title": "Details"
      },
      {
        "command": "ast-results.viewResult",
        "category": "checkmarx-ast",
        "title": "View",
        "icon": "$(eye)",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.viewSettings",
        "category": "checkmarx-ast",
        "title": "Settings",
        "icon": "$(gear)"
      },
      {
        "command": "ast-results.clear",
        "category": "checkmarx-ast",
        "title": "Clear",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.groupBySeverity",
        "category": "checkmarx-ast",
        "title": "Group by: Severity",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.groupByLanguage",
        "category": "checkmarx-ast",
        "title": "Group by: Language",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.groupByStatus",
        "category": "checkmarx-ast",
        "title": "Group by: Status",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.groupByFile",
        "category": "checkmarx-ast",
        "title": "Group by: File",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.clear",
        "category": "checkmarx-ast",
        "title": "Clear",
        "icon": "$(refresh)",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.filterHigh_toggle",
        "category": "checkmarx-ast",
        "title": "HIGH",
        "icon": "media/icons/high_toggle.svg",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.filterHigh_untoggle",
        "category": "checkmarx-ast",
        "title": "HIGH",
        "icon": "media/icons/high_untoggle.svg",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.filterMedium_toggle",
        "category": "checkmarx-ast",
        "title": "MEDIUM",
        "icon": "media/icons/medium_toggle.svg",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.filterMedium_untoggle",
        "category": "checkmarx-ast",
        "title": "MEDIUM",
        "icon": "media/icons/medium_untoggle.svg",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.filterLow_toggle",
        "category": "checkmarx-ast",
        "title": "LOW",
        "icon": "media/icons/low_toggle.svg",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.filterLow_untoggle",
        "category": "checkmarx-ast",
        "title": "LOW",
        "icon": "media/icons/low_untoggle.svg",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.filterInfo_toggle",
        "category": "checkmarx-ast",
        "title": "INFO",
        "icon": "media/icons/info_toggle.svg",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.filterInfo_untoggle",
        "category": "checkmarx-ast",
        "title": "INFO",
        "icon": "media/icons/info_untoggle.svg",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.generalPick",
        "category": "checkmarx-ast",
        "title": "Select All",
        "icon": "$(search)",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.projectPick",
        "category": "checkmarx-ast",
        "title": "Select Project",
        "icon": "$(edit)",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.branchPick",
        "category": "checkmarx-ast",
        "title": "Select Branch",
        "icon": "$(edit)",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.scanPick",
        "category": "checkmarx-ast",
        "title": "Select Scan",
        "icon": "$(edit)",
        "enablement": "ast-results.isValidCredentials"
      },
      {
        "command": "ast-results.scanInput",
        "category": "checkmarx-ast",
        "title": "Look for Scan",
        "icon": "$(search)",
        "enablement": "ast-results.isValidCredentials"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "ast-results.projectPick",
          "group": "inline",
          "when": "viewItem == project-item"
        },
        {
          "command": "ast-results.branchPick",
          "group": "inline",
          "when": "viewItem == branch-item"
        },
        {
          "command": "ast-results.scanPick",
          "group": "inline",
          "when": "viewItem == scan-item"
        },
        {
          "command": "ast-results.scanInput",
          "group": "inline",
          "when": "viewItem == scan-item"
        }
      ],
      "view/title": [
        {
          "command": "ast-results.filterHigh_untoggle",
          "group": "navigation@1",
          "when": "view == astResults && ast-results-high"
        },
        {
          "command": "ast-results.filterHigh_toggle",
          "group": "navigation@1",
          "when": "view == astResults && !ast-results-high"
        },
        {
          "command": "ast-results.filterMedium_untoggle",
          "group": "navigation@2",
          "when": "view == astResults && ast-results-medium"
        },
        {
          "command": "ast-results.filterMedium_toggle",
          "group": "navigation@2",
          "when": "view == astResults && !ast-results-medium"
        },
        {
          "command": "ast-results.filterLow_untoggle",
          "group": "navigation@3",
          "when": "view == astResults && ast-results-low"
        },
        {
          "command": "ast-results.filterLow_toggle",
          "group": "navigation@3",
          "when": "view == astResults && !ast-results-low"
        },
        {
          "command": "ast-results.filterInfo_untoggle",
          "group": "navigation@4",
          "when": "view == astResults && ast-results-info"
        },
        {
          "command": "ast-results.filterInfo_toggle",
          "group": "navigation@4",
          "when": "view == astResults && !ast-results-info"
        },
        {
          "command": "ast-results.groupBySeverity",
          "group": "@groupBy",
          "when": "view == astResults"
        },
        {
          "command": "ast-results.groupByStatus",
          "group": "@groupBy",
          "when": "view == astResults"
        },
        {
          "command": "ast-results.groupByLanguage",
          "group": "@groupBy",
          "when": "view == astResults"
        },
        {
          "command": "ast-results.groupByFile",
          "group": "@groupBy",
          "when": "view == astResults"
        },
        {
          "command": "ast-results.viewSettings",
          "group": "navigation@7",
          "when": "view == astResults"
        },
        {
          "command": "ast-results.clear",
          "group": "navigation@6",
          "when": "view == astResults"
        },
        {
          "command": "ast-results.generalPick",
          "group": "navigation@5",
          "when": "view == astResults"
        }
      ]
    },
    "views": {
      "astView": [
        {
          "id": "astResults",
          "type": "tree",
          "name": "Results"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "astView",
          "title": "CxAST",
          "icon": "media/cx-icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "astResults",
        "contents": "In order to use Checkarmx AST, you need to setup your credentials.\n[Open settings](command:ast-results.viewSettings)\nTo learn more about how to use Checkmarx AST [read our docs](https://checkmarx.atlassian.net/wiki/x/AwBwagE).",
        "when": "!ast-results.isValidCredentials"
      }
    ],
    "configuration": {
      "title": "Checkmarx AST",
      "properties": {
        "checkmarxAST.base-uri": {
          "type": "string",
          "default": "",
          "description": "AST Server URI"
        },
        "checkmarxAST.base-auth-uri": {
          "type": "string",
          "default": "",
          "description": "AST Server authentication server URI"
        },
        "checkmarxAST.tenant": {
          "type": "string",
          "default": "",
          "description": "Tenant"
        },
        "checkmarxAST.apiKey": {
          "type": "string",
          "default": "",
          "description": "API KEY"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copytestproject && npm run copymedia",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -w -p ./ && npm run copytestproject",
    "copytestproject": "copyfiles -u 2 \"src/resources/**/*\" out/test/ -E",
    "copymedia": "copyfiles \"media/icons/*\" out/ -E",
    "test": "npm run compile && extest setup-and-run './out/test/**/*test.js'"
  },
  "devDependencies": {
    "@types/chai": "4.2.22",
    "@types/mocha": "9.0.0",
    "@types/node": "^16.10.1",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.16.0",
    "@typescript-eslint/parser": "^4.16.0",
    "chai": "4.3.4",
    "eslint": "^7.21.0",
    "mocha": "9.1.2",
    "typescript": "^4.4.4",
    "vsce": "^1.96.0",
    "vscode-extension-tester": "4.2.3",
    "vscode-extension-tester-locators": "^1.59.0",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "@checkmarxdev/ast-cli-javascript-wrapper": "0.0.38",
    "copyfiles": "2.4.1"
  },
  "extensionDependencies": [
    "vscode.git"
  ]
}
