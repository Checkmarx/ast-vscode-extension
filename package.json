{
  "name": "ast-results",
  "publisher": "Checkmarx",
  "displayName": "AST Results",
  "description": "For managing AST scan results",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.56.2"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ast-results.helloWorld",
    "onView:astResults"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ast-results.helloWorld",
        "category": "checkmarx-ast",
        "title": "Hello World"
      },
      {
        "command": "ast-results.viewSastResult",
        "category": "checkmarx-ast",
        "title": "View"
      },
      {
        "command": "ast-results.filterSeverity",
        "category": "checkmarx-ast",
        "title": "Severity"
      },
      {
        "command": "ast-results.filterLanguage",
        "category": "checkmarx-ast",
        "title": "Language"
      },
      {
        "command": "ast-results.filterStatus",
        "category": "checkmarx-ast",
        "title": "Status"
      },
      {
        "command": "ast-results.filterFile",
        "category": "checkmarx-ast",
        "title": "File"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ast-results.filterSeverity",
          "group": "navigation",
          "when": "view == astResults"
        },
        {
          "command": "ast-results.filterStatus",
          "group": "navigation",
          "when": "view == astResults"
        },
        {
          "command": "ast-results.filterLanguage",
          "when": "view == astResults"
        },
        {
          "command": "ast-results.filterFile",
          "when": "view == astResults"
        }
      ],
      "view/item/context": [
        {
          "command": "ast-results.viewSastResult",
          "group": "inline"
        }
      ]
    },
    "views": {
      "astView": [
        {
          "id": "astProjectView",
          "type": "webview",
          "name": "Projects"
        },
        {
          "id": "astResults",
          "type": "tree",
          "name": "Results"
        },
        {
          "id": "astDetailsView",
          "type": "webview",
          "name": "Details"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "astView",
          "title": "Checkmarx AST",
          "icon": "media/cx-icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "Checkmarx AST",
      "properties": {
        "checkmarxAST.base-uri": {
          "type": "string",
          "default": "",
          "description": "AST Server URI"
        },
        "checkmarxAST.base-auth-uri": {
          "type": "string",
          "default": "",
          "description": "AST Server authentication server URI"
        },
        "checkmarxAST.tenant": {
          "type": "string",
          "default": "",
          "description": "AST Server authentication server tenant",
          "required": true
        },
        "checkmarxAST.client-id": {
          "type": "string",
          "default": "",
          "description": "Client ID"
        },
        "checkmarxAST.client-secret": {
          "type": "string",
          "default": "",
          "description": "Client Secret"
        },
        "checkmarxAST.useProxy": {
          "type": "boolean",
          "default": false,
          "description": "Use Proxy Server?"
        },
        "checkmarxAST.proxy": {
          "type": "string",
          "default": "",
          "description": "Proxy server address"
        },
        "checkmarxAST.ntlmProxy": {
          "type": "boolean",
          "default": false,
          "description": "Is proxy NTLM?"
        },
        "checkmarxAST.ntlmDomain": {
          "type": "string",
          "default": "",
          "description": "NTLM domain"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "@checkmarxdev/ast-cli-javascript-wrapper": "npm:@CheckmarxDev/ast-cli-javascript-wrapper@^0.0.26"
  }
}
