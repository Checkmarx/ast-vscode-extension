{
  "editor.insertSpaces": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.probe": ["javascript", "typescript"],
  "editor.formatOnSave": true,
  // First run prettier then ESLint (requires both eslint and prettier extensions to be installed in vscode)
  "editor.codeActionsOnSave": ["source.formatDocument", "source.fixAll.eslint"],
  "mochaExplorer.files": "src/unit/**/*.test.ts",
  "mochaExplorer.require": "ts-node/register",
  "mochaExplorer.ui": "bdd",
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "Checkmarx AI Secure Coding Assistant (ASCA) Realtime Scanner.Activate ASCA Realtime": true,
  "Checkmarx Open Source Realtime Scanner (OSS-Realtime).Activate OSS-Realtime": true,
  "Checkmarx Secret Detection Realtime Scanner.Activate Secret Detection Realtime": true,
  "Checkmarx Containers Realtime Scanner.Activate Containers Realtime": true,
  "Checkmarx IAC Realtime Scanner.Activate IAC Realtime": true
}
